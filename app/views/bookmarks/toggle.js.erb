<% if @bookmark.present? %>
console.log("塗りつぶしにする")
console.log($("#favorite-icon-<%= @drink.id %>"))
  //お気に入りアイコンを塗りつぶし状態に変更
  $("#favorite-icon-<%= @drink.id %>").removeClass('bi-heart').addClass('bi-heart-fill');
<% else %>
console.log("塗りつぶしを解除する")
  // ブックマークが存在しない場合、お気に入りアイコンの塗りつぶしを解除
  $("#favorite-icon-<%= @drink.id %>").removeClass('bi-heart-fill').addClass('bi-heart');
<% end %>
