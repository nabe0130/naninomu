<h3 class="mb-4">お気に入り一覧</h3>
<div class="container">
  <% @bookmarks.each do |bookmark| %>
    <div class="card mb-3">
      <div class="row g-0">
        <div class="col-md-12">
          <div class="card-body">
            <h5 class="card-title"><%= bookmark.drink.name %></h5>
            <p class="card-text"><%= bookmark.drink.description %></p>
            <div class="d-flex justify-content-between align-items-center">
              <small class="text-muted">お気に入りに追加された日時: <%= bookmark.created_at.strftime('%Y/%m/%d') %></small>
              <%= link_to drink_bookmarks_path(bookmark.drink), method: :delete, class: 'custom-icon-link' do %>
                <i class="bi bi-heart-fill"></i>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <div class="mt-4">
    <%= paginate @bookmarks %>
  </div>
</div>
